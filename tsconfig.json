{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": ["@cloudflare/workers-types", "bun-types"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./src",
    "paths": {
      "$lib": ["lib"],
      "$lib/*": ["lib/*"],
      "$config": ["../config"],
      "$config/*": ["../config/*"],
      "$routes": ["routes"],
      "$routes/*": ["routes/*"],
      "$db": ["../db"],
      "$db/*": ["../db/*"]
    }
  },
  "include": ["src/**/*", "config/**/*", "db/**/*"],
  "exclude": ["node_modules"]
}